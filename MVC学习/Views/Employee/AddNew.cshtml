@using ViewModel
@model CreateEmployeeViewModel
@{
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

@section TitleSection
{
    CreateEmployee
}

@section HeaderSection
{
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/Validations.js"></script>
    <script>
        function ResetForm()
        {
            $("#TxtFName").val("");
            $("#TxtLName").val("");
            $("#TxtSalary").val("");
        }
    </script>
}

@section ContentBody
{
    <body>

        <div>
            <form action="/Employee/SaveEmployee" method="post">
                First Name: <input type="text" id="TxtFName" name="FirstName" value="@Model.FirstName" />@Html.ValidationMessage("FirstName")<br />
                Last Name: <input type="text" id="TxtLName" name="LastName" value="@Model.LastName" />@Html.ValidationMessage("LastName")<br />
                Salary: <input type="text" id="TxtSalary" name="Salary" value="@Model.Salary" />@Html.ValidationMessage("Salary")<br />
                <input type="submit" name="BtnSubmit" value="Save Employee" onclick="IsValid()" />
                <input type="button" name="BtnReset" value="Reset" onclick="ResetForm()" />
                <input type="submit" name="BtnSubmit" value="Cancel" />
            </form>
        </div>

    </body>
}


</html>